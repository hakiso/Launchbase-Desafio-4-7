{% extends "layout.njk" %}

{% block content %}

    <div class="card">
        <section class="avatars" style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover"></section>
        <section class="details">

            <h3>Detalhes</h3>

            <div class="item">
                <div>Professor</div>
                <div>{{ teacher.name }}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{ teacher.age }}</div>
            </div>

            <div class="item">
                <div>Grau de escolaridade</div>
                <div>
                    {{teacher.graduation}}
                </div>
            </div>

            <div class="item">
                <div>Tipo de Aula</div>
                <div>
                    {{ "Presencial" if teacher.schooling == "P" else "Ã€ Distancia" }}</div>
            </div>

            <div class="item">
                <div>Acompanhamentos</div>
                <div>
                    {% for service in teacher.services %}
                        <span>{{ service }}</span>
                    {% endfor %}
                </div>

                <div class="item">
                    <div>Desde</div>
                    <div>{{ teacher.created_at }}</div>
                </div>

                <a href="/teachers/{{ teacher.id }}/edit" class="button">Editar</a>

            </section>
        </div>

    {% endblock content %}