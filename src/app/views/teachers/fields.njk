<div class="item">
    <div>Avatar URL</div>
    <div>
        <input 
            type="url" 
            name="avatar_url" 
            placeholder="http://" 
            value="{{ teacher.avatar_url }}"
        >
    </div>
</div>

<div class="item">
    <div>Nome Completo</div>
    <div>
        <input 
            type="text" 
            name="name" 
            placeholder="Nome do Professor" 
            value="{{ teacher.name }}"
            >
    </div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input 
            type="date" 
            name="birth" 
            value="{{ teacher.birth }}"
            >
    </div>
</div>

<div class="item">
    <div>Grau de escolaridade</div>
    <div>
        <select name="graduation" id="grau">
            <option value="medio">Ensino Médio Completo</option>
            <option value="superior">Ensino Superior Completo</option>
            <option value="doutor">Mestrado e Doutorado</option>
        </select>
    </div>
</div>

<div class="item">
    <div>Tipo de Aula</div>
    <div>
        <span>
            <input 
                type="radio" 
                name="schooling" 
                value="P" 
                {% if teacher.schooling == 'P' %}
                    checked 
                {% endif %}
                >Presencial
        </span>
        <span>
            <input 
                type="radio" 
                name="schooling" 
                value="A" 
                {% if teacher.schooling == 'A' %}
                    checked 
                {% endif %}
                >À Distância
        </span>

    </div>
</div>
<div class="item">
    <div>Acompanhamentos</div>
    <div>
        <input type="text" name="services" placeholder="Separe os serviços prestados por vírgulas" value="{{ teacher.services }}">
    </div>
</div>

<button type="submit">Salvar</button>