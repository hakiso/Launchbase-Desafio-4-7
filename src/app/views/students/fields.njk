<div class="item">
    <div>Avatar URL</div>
    <div>
        <input 
            type="url" 
            name="avatar_url"
            placeholder="http://"
            value="{{ student.avatar_url }}"
        >
    </div>
</div>

<div class="item">
    <div>Nome</div>
    <div>
        <input 
            type="text"
            name="name"
            value="{{ student.name }}"
        >
    </div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input 
            type="date" 
            name="birth"
            value="{{ student.birth }}"
        >
    </div>
</div>

<div class="item">
    <div>Sexo</div>
    <div>
        <span>
            <input 
                type="radio" 
                name="gender" 
                value="M" 
                {% if student.gender == 'M' %}
                    checked
                {% endif %}
                >Masculino
        </span>
        <span>
            <input 
                type="radio" 
                name="gender" 
                value="F"
                {% if student.gender == 'F' %}
                    checked
                {% endif %}
                >Feminino
        </span>
                
    </div>
</div>

<div class="item">
    <div>Email</div>
    <div>
        <input 
            type="email"
            name="email"
            value="{{ student.email }}"
        >
    </div>
</div>

<div class="item">
    <div>Ano Escolar</div>
    <div>
        <select name="letivo">
            <option value="5EF" {% if student.letivo == "5EF"%}selected{% endif %}>
                    5º Fundamental
            </option>            
            <option value="6EF" {% if student.letivo == "6EF"%}selected{% endif %}>
                    6º Fundamental
            </option>
            <option value="7EF" {% if student.letivo == "7EF"%}selected{% endif %}>
                    7º Fundamental
            </option>            
            <option value="8EF" {% if student.letivo == "8EF"%}selected{% endif %}>
                    8º Fundamental
            </option> 
            <option value="9EF" {% if student.letivo == "9EF"%}selected{% endif %}>
                    9º Fundamental
            </option>            
            <option value="1EM" {% if student.letivo == "1EM"%}selected{% endif %}>
                    1º Médio
            </option>
            <option value="2EM" {% if student.letivo == "2EM"%}selected{% endif %}>
                    2º Médio
            </option>            
            <option value="3EM" {% if student.letivo == "3EM"%}selected{% endif %}>
                    3º Médio
            </option>    
        </select>
    </div>
</div>

<div class="item">
    <div>Carga Horária Semanal</div>
    <div>
        <input 
            type="number" 
            name="hours"
            value="{{ student.hours }}"
        >
    </div>
</div>

<button type="submit">Salvar</button>